{
  "name": "apm-data",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/team-apm/apm-data.git",
  "license": "CC BY-NC-SA 4.0",
  "author": "ato lash <28973861+hal-shu-sato@users.noreply.github.com>",
  "scripts": {
    "check-convert": "tsx util/check-convert.ts",
    "check-update": "tsx util/check-update.ts",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write .",
    "format": "tsx util/format-json.ts",
    "generate-releases": "tsx util/generate-releases.ts",
    "lint": "run-s lint:prettier lint:eslint",
    "lint:eslint": "eslint --fix-dry-run .",
    "lint:jsonschema": "ajv -s node_modules/apm-schema/v3/schema/core.json -d v3/core.json && ajv -s node_modules/apm-schema/v3/schema/packages.json -d v3/packages.json && ajv -s node_modules/apm-schema/v3/schema/scripts.json -d v3/scripts.json && ajv -c ajv-formats -s node_modules/apm-schema/v3/schema/list.json  -d v3/list.json && ajv -s node_modules/apm-schema/v3/schema/convert.json  -d v3/convert.json",
    "lint:prettier": "prettier --check .",
    "mod-convert": "tsx util/update-mod.ts --convert",
    "mod-core": "tsx util/update-mod.ts --core",
    "mod-packages": "tsx util/update-mod.ts --packages",
    "mod-scripts": "tsx util/update-mod.ts --scripts",
    "prepare": "husky",
    "release": "tsx util/release.ts",
    "sri": "tsx util/sri.ts"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@octokit/rest": "^22.0.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.0",
    "@types/node-7z": "^2.1.10",
    "@types/ssri": "^7.1.5",
    "7zip-bin": "^5.2.0",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "apm-schema": "team-apm/apm-schema#v3.3.0",
    "chalk": "^5.6.2",
    "clipboardy": "^5.0.0",
    "compare-versions": "^6.1.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "fs-extra": "^11.3.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.2.4",
    "node-7z": "^3.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "ssri": "^12.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "packageManager": "yarn@1.22.22"
}
