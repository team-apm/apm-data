{
  "name": "apm-data",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/hal-shu-sato/apm-data.git",
  "license": "CC BY-NC-SA 4.0",
  "author": "ato lash <hal-shu-sato@users.noreply.github.com>",
  "type": "module",
  "scripts": {
    "lint": "run-s lint:prettier lint:eslint lint:jsonschema",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --fix-dry-run .",
    "lint:jsonschema": "ajv -s node_modules/apm-schema/v3/schema/core.json -d v3/core.json && ajv -s node_modules/apm-schema/v3/schema/packages.json -d v3/packages.json && ajv -s node_modules/apm-schema/v3/schema/scripts.json -d v3/scripts.json && ajv -c ajv-formats -s node_modules/apm-schema/v3/schema/list.json  -d v3/list.json && ajv -s node_modules/apm-schema/v3/schema/convert.json  -d v3/convert.json",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix .",
    "prepare": "husky",
    "release": "release-it",
    "check-convert": "node util/check-convert.js",
    "check-update": "node util/check-update.js",
    "mod-core": "node util/update-mod.js --core",
    "mod-packages": "node util/update-mod.js --packages",
    "mod-convert": "node util/update-mod.js --convert",
    "mod-scripts": "node util/update-mod.js --scripts",
    "sri": "node util/sri.js",
    "convert-2-3": "run-p convert-2-3:*",
    "convert-2-3:core": "node util/convert-2-3.js --core",
    "convert-2-3:packages": "node util/convert-2-3.js --packages",
    "convert-2-3:mod": "node util/convert-2-3.js --mod",
    "generate-releases": "node util/generate-releases.js",
    "format": "node util/format-json.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,css,md,xml,xsd}": "prettier --write"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "@eslint/js": "^9.17.0",
    "@octokit/rest": "^21.0.2",
    "@prettier/plugin-xml": "^3.4.1",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "apm-schema": "team-apm/apm-schema#v3.3.0",
    "chalk": "^5.4.1",
    "clipboardy": "^4.0.0",
    "compare-versions": "^6.1.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "fast-xml-parser": "^4.5.1",
    "fs-extra": "^11.2.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "node-7z": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.6",
    "release-it": "^17.11.0",
    "ssri": "^12.0.0"
  }
}
